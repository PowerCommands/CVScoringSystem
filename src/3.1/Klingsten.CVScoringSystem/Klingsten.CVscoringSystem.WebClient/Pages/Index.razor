@page "/"
@inject IStateService StateService
@inject IPreferencesService PreferencesService


<PageTitle>@ClientConfiguration.Name @ClientConfiguration.Version</PageTitle>
<MudGrid>
    <MudItem xs="12" md="12" xl="12">
        <CvsCalculator></CvsCalculator>
    </MudItem>
</MudGrid>

@code {
    protected override async void OnInitialized()
    {
        await PreferencesService.Initialize().ContinueWith(_ =>
        {
            StateService.PreferencesChanged(StateService.Preferences);
        });
    }
}